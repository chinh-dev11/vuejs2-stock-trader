{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": [2, "always"],
        "singleQuote": true,
        "vue/html-self-closing": "off",
        "vue/html-indent": ["warn", 2, {
            "closeBracket": 1
        }]
    }
}